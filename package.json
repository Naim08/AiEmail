{
  "name": "mern-twitter",
  "version": "1.0.0",
  "description": "MERN stack clone of Twitter",
  "scripts": {
    "backend-install": "npm install --prefix backend",
    "backend": "npm run start --prefix backend watch",
    "frontend-install": "npm install --prefix frontend",
    "frontend": "npm start --prefix frontend watch",
    "frontend-build": "npm run build --prefix frontend",
    "build": "npm run backend-install && npm run frontend-install && npm run frontend-build",
    "run-all": "npm run backend & npm run frontend",
    "start": "npm start --prefix backend"
  },
  "repository": {
    "type": "git"
  },
  "keywords": [],
  "license": "ISC",
  "engines": {
    "node": "16.x"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "csurf": "^1.11.0",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0"
  },
  "devDependencies": {
    "dotenv-cli": "^7.3.0",
    "nodemon": "^3.0.1"
  }
}
